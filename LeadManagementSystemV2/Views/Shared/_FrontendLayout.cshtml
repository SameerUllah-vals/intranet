    <script>

        function GetGMT2() {
            $.ajax({
                url: "http://worldtimeapi.org/api/timezone/Etc/GMT-2",
                type: "Get",
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded'
                },
                success: function (response) {
                    let time = new Date(response.datetime);
                    $(".Time-2").html(time.toLocaleString('en-US', { timeZone: 'Etc/GMT-2', hour: '2-digit', minute: '2-digit' }));
                }
            });

        }
        function GetGMT3() {
            $.ajax({
                url: "http://worldtimeapi.org/api/timezone/Etc/GMT-3",
                type: "Get",
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded'
                },
                success: function (response) {
                    let time = new Date(response.datetime);
                    $(".Time-3").html(time.toLocaleString('en-US', { timeZone: 'Etc/GMT-3', hour: '2-digit', minute: '2-digit' }));
                }
            });
        }
        function GetGMT4() {
            $.ajax({
                url: "http://worldtimeapi.org/api/timezone/Etc/GMT-4",
                type: "Get",
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded'
                },
                success: function (response) {
                    let time = new Date(response.datetime);
                    $(".Time-4").html(time.toLocaleString('en-US', { timeZone: 'Etc/GMT-4', hour: '2-digit', minute: '2-digit' }));
                }
            });
        }
        function GetGMT5() {
            //$(".Time-4").html(time.toTimeString(undefined, {
            //        //    hour: '2-digit',
            //        //    minute: '2-digit',
            //        //}));
            $.ajax({
                url: "http://worldtimeapi.org/api/timezone/Etc/GMT-5",
                type: "Get",
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded'
                },
                success: function (response) {
                    let time = new Date(response.datetime);
                    $(".Time-5").html(time.toLocaleString('en-US', { timeZone: 'Etc/GMT-5', hour: '2-digit', minute: '2-digit' }));
                }
            });
        }
        $(document).ready(function () {
            $.ajax({
                url: "https://free.currconv.com/api/v7/convert?q=USD_PKR&compact=ultra&apiKey=c6cbd4438f3cf0d2cdf6",
                type: "Get",
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded'
                },
                dataType: "json",
                success: function (response) {
                    $(".usd").html(parseFloat(response.USD_PKR).toFixed(2));
                }
            });
            $.ajax({
                url: "https://free.currconv.com/api/v7/convert?q=QAR_PKR&compact=ultra&apiKey=c6cbd4438f3cf0d2cdf6",
                type: "Get",
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded'
                },
                dataType: "json",
                success: function (response) {
                    $(".qatar").html(parseFloat(response.QAR_PKR).toFixed(2));
                }
            });
            $.ajax({
                url: "https://free.currconv.com/api/v7/convert?q=AED_PKR&compact=ultra&apiKey=c6cbd4438f3cf0d2cdf6",
                type: "Get",
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded'
                },
                dataType: "json",
                success: function (response) {
                    $(".uae").html(parseFloat(response.AED_PKR).toFixed(2));
                }
            })
            GetGMT2();
            GetGMT3();
            GetGMT4();
            GetGMT5();

        });
    </script>
