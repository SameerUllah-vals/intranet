            foreach (var record in Model.Servey.Questions)
            {
                <div class="tab">
                    <h5>@record.Question @Html.Hidden("ServeyQuestionId", record.ID)</h5>
                    <hr />
                    <div class="row justify-content-center">
                        <div class="col-md-3">
                            <p><input class="w-input" type="radio" name="[@record.ID].Answer" value="@record.opt1">@record.opt1</p>
                        </div>
                        <div class="col-md-3">
                            <p><input class="w-input" type="radio" name="[@record.ID].Answer" value="@record.opt2">@record.opt2</p>
