@model LeadManagementSystemV2.Models.BusinessAppModel
@using LeadManagementSystemV2.Helpers;
@section LinkStyleSection{
    @Styles.Render("~/assets/cache/select2style")
    @Styles.Render("~/assets/cache/datepickerstyle")
}
@section LinkScriptSection{
    @Scripts.Render("~/assets/cache/select2script")
    @Scripts.Render("~/assets/cache/datepickerscript")
}
@section InLineScriptSection{
    <script>
    @if (ViewBag.PageType == "View")
    {
       @:DisableView();
    }

        function IsFooterLink(value) {
            if (value == "Footer") {

                $("#Category").val("-");
                $("#pnlCategory").hide();
                $("#footerValue").show();
            }
            else {
                $("#pnlCategory").show();
                $("#footerValue").hide();
                $("#pnlURL").show();
                $("#pnlFILE").hide();

            }
        }
        function ChangeFooterType(value) {
            if (value === "URL") {
                $("#pnlURL").show();
                $("#pnlFILE").hide();
            }
            else if (value === "FILE") {
                $("#pnlURL").hide();
                $("#pnlFILE").show();
            }
        }

        $(document).ready(function () {
            IsFooterLink($("#IsFooterLink").val());
            ChangeFooterType($("#FooterValueType").val());
        })
        $("#IsFooterLink").change(function () {
            IsFooterLink($(this).val());
        })
        $(document).on("change","#FooterValueType",function () {
            var value = $(this).val();
            ChangeFooterType(value);
            
        })
        
    </script>
}
@{Html.RenderPartial("BreadCrumb");}
<!--Page content-->
<!--===================================================-->
<div id="page-content">
    <div class="panel">
        <!--Block Styled Form -->
        <!--===================================================-->
        @using (Ajax.BeginForm("Save", "BusinessApp", null, new AjaxOptions { HttpMethod = "POST", OnBegin = "OnFormBegin", OnComplete = "OnFormComplete", OnSuccess = "OnFormSuccess", OnFailure = "OnFormFailure" }, new { @id = "FormMember", @autocomplete = "off", enctype ="multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.ID)
            <div class="panel-body">
                <div class="row">

                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label">Is Footer Link? <span class="text-danger">*</span></label>
                            @Html.DropDownListFor(m => m.IsFooterLink, new List<SelectListItem>
                                 {
                                     new SelectListItem{ Text="Business Apps", Value = "BA" },
                                     new SelectListItem{ Text="Footer", Value = "Footer" },
                                  }, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.IsFooterLink, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-sm-6" id="pnlCategory">
                        <div class="form-group">
                            <label class="control-label">Category <span class="text-danger">*</span></label>
                            @Html.DropDownListFor(m => m.Category,new SelectList(ViewBag.Parents,"ID","Name"), new { @class = "form-control" })
                            @*@Html.ValidationMessageFor(m => m.Category, "", new { @class = "text-danger" })*@
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label">Name <span class="text-danger">*</span></label>
                            @Html.TextBoxFor(m => m.Name, null, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="col-sm-6" id="footerValue" style="display:none">
                        <div class="form-group">
                            <label class="control-label">Footer value type <span class="text-danger">*</span></label>
                            @Html.DropDownListFor(x => x.FooterValueType, new List<SelectListItem>
                                {
                                    new SelectListItem{ Text="URL", Value = "URL" },
                                    new SelectListItem{ Text="FILE", Value = "FILE" },
                                 }, new { @class = "form-control" })
                           
                        </div>
                    </div>
                    <div class="col-sm-6" id="pnlURL">
                        <div class="form-group">
                            <label class="control-label">Url<span class="text-danger">*</span></label>
                            @Html.TextBoxFor(m => m.Url, null, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Url, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-sm-6" id="pnlFILE" style="display:none">
                        <div class="form-group">
                            <label class="control-label">File<span class="text-danger">*</span></label>
                            <input type="file" id="File" name="File" />
                            @Html.ValidationMessageFor(m => m.File, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
                <div class="panel-footer text-right">
                    <a class="btn btn-info" href="@ViewBag.PageURL" tabindex="8">Back</a>
                    <button class="btn btn-success" type="submit" tabindex="9">Save</button>
                </div>

                <!--===================================================-->
                <!--End Block Styled Form -->
            </div>
        }
    </div>
</div>
<!--===================================================-->
<!--End page content-->
