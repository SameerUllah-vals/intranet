@model LeadManagementSystemV2.Models.LeadLogBookModel
@using LeadManagementSystemV2.Helpers;
@section LinkStyleSection{
    @Styles.Render("~/assets/cache/datepickerstyle")
    @Styles.Render("~/assets/cache/select2style")
}
@section LinkScriptSection{
    @Scripts.Render("~/assets/cache/datepickerscript")
    @Scripts.Render("~/assets/cache/select2script")
}
@section InLineScriptSection{
    <script>
    @if (ViewBag.PageType == "View")
    {
       @:DisableView();
    }
    </script>
}
@{Html.RenderPartial("BreadCrumb");}
<!--Page content-->
<!--===================================================-->
<div id="page-content">
    <div class="panel">
        <!--Block Styled Form -->
        <!--===================================================-->
        @using (Ajax.BeginForm("Save", "LeadLogBook", null, new AjaxOptions { HttpMethod = "POST", OnBegin = "OnFormBegin", OnComplete = "OnFormComplete", OnSuccess = "OnFormSuccess", OnFailure = "OnFormFailure" }, new { @id = "FormMember", @autocomplete = "off" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.ID)
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel">
                            <div class="panel-heading">
                                <h3 class="panel-title">Lead Update</h3>
                            </div>
                            <div class="panel-body">
                                <!-- Timeline -->
                                <!--===================================================-->
                                <div class="timeline">

                                    <!-- Timeline header -->
                                    <div class="timeline-header">
                                        <div class="timeline-header-title bg-info">Now</div>
                                    </div>

                                    <div class="timeline-entry">
                                        <div class="timeline-stat">
                                            <div class="timeline-icon"><i class="demo-pli-office icon-2x"></i></div>
                                            <div class="timeline-time">@{string date = ViewBag.LeadRecord == null ? "" : ViewBag.LeadRecord.CreatedDateTime.ToString("dd MMM, yyyy hh:mm tt");} @date</div>
                                        </div>
                                        <div class="timeline-label">
                                            <p class="text-bold"><a href="#" class="text-warning">@{string name = ViewBag.LeadRecord == null ? "" : ViewBag.LeadRecord.Name;} @name</a></p>
                                            @{string remarks = ViewBag.LeadRecord == null ? "" : ViewBag.LeadRecord.Description;} @remarks
                                        </div>
                                    </div>

                                    @if (ViewBag.LeadLogBookRecord != null)
                                    {
                                        foreach (var item in ViewBag.LeadLogBookRecord)
                                        {
                                            <div class="timeline-entry">
                                                <div class="timeline-stat">
                                                    <div class="timeline-icon"><i class="demo-pli-office icon-2x"></i></div>
                                                    <div class="timeline-time">@item.CreatedDateTime.ToString("dd MMM, yyyy hh:mm tt")</div>
                                                </div>
                                                <div class="timeline-label">
                                                    <p class="text-bold"><a href="#" class="text-warning">@item.Lead.User.Name</a></p>
                                                    @item.Description
                                                </div>
                                            </div>
                                        }
                                    }

                                </div>
                                <!--===================================================-->
                                <!-- End Timeline -->
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-lg-1">

                        </div>
                        <div class="col-lg-10">
                            @Html.TextAreaFor(m => m.Description, new { @class="form-control", @placeholder = "Comment *", @tabindex = "1" })
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-lg-1">

                        </div>
                        <div class="col-md-6">
                            <button class="btn btn-success" type="submit" tabindex="2">Comment</button>
                        </div>
                    </div>

                </div>
            </div>
            <div class="panel-footer text-right">
                <a class="btn btn-info" href="@ViewBag.PageURL" tabindex="8">Back</a>
            </div>
        }
        <!--===================================================-->
        <!--End Block Styled Form -->
    </div>
</div>
<!--===================================================-->
<!--End page content-->
