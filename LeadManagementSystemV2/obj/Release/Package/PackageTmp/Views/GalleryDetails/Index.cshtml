@model IEnumerable<LeadManagementSystemV2.Models.GalleryDetail>
@using LeadManagementSystemV2.Helpers;
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_FrontendLayout.cshtml";
}

<!-- Page Content -->
<div class="container-fluid spacer-padding mt-6">
    <div class="row">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@ViewBag.WebsiteURL/home">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Gallery</li>
            </ol>
        </nav>
    </div>
    <div class="row gallery-slider">
        <!--Gallery Grid-->
        @foreach (var item in Model)
        {
            <div class="col-xl-3 col-lg-4 col-md-6 col-12 text-center mb-5 ">
                <div class="card border-0  bg-transparent mb-4">
                    <i class="fas fa-image"></i>
                    <img src="~/assets/gallery/@item.Image" class="card-img-top img-fluid" alt="gallery" style=" width: 503px !important; height: 217px !important;">
                    <div class="card-body">
                        <h3 class="card-title mb-0"> @item.Title</h3>
                        <small>@item.CreatedDateTime.ToString(ApplicationHelper.Website_Date_Format)</small>
                    </div>
                </div>
            </div>
        }
        <!--Gallery Grid-->
    </div>
</div>
<!-- Page Content -->
